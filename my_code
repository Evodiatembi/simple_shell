#include <stdio.h>
/**
*main -calculates monthly average of 5 students
*
*Return: always 0
*/
float m1, m2, m3, sum, avg, sumavg;
int l = 1;
int num[5];
char name[5];
for (num = 1; num <= 5; num++){
write("enter number of alx students\n");
getline("%f", &num);
write("enter name of alx students\n");
getline("%s", name);
write("enter firstmonth, secondmonth, thirdmonth m1, m2, m3\n");
getline("%f %f %f", &m1, &m2, &m3);
sum = m1 + m2 + m3;
write("the total mark is: %f\n", sum);
avg = sum/3;
write("the average is: %f\n", avg);
}
for (l = 1; l <= num; l++){
sumavg += avg[l];
write("the su averages of 5 alx students is: %f\n", sumavg);
}
return 0;
}
